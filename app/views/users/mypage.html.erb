<% provide(:title, 'マイページ') %>
<h2>マイページ</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3 mypage">
    <div class="register-box">
      <div class="login-logo">
        <% if @user.image? %>
          <%= image_tag(@user.image.url) %>
        <% else %>
          <%= image_tag("/images/icon1.jpg", size: "150x150") %>
        <% end %>
      </div>
      <div class="user_column">
        <p class="column_title">自己紹介</p>
        <p class="column_content"><%= @user.profile %></p>
      </div>
      <p>------------------------------ 基本情報 --------------------------------</p>
    </div>
    <%= render partial: 'user_info', locals: { user: @user } %>
    <div class="edit-mypage-btn">
      <%= link_to 'マイページ編集', mypage_edit_path, class: 'btn btn-primary'%>　　
    </div>
  </div>
</div>