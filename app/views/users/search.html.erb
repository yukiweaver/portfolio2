<% provide(:title, '検索ページ') %>
<%# <h2>マッチング</h2> %>
<div class="row">
  <div class="col-md-6 col-md-offset-3", style="text-align:center">
    <%= form_with url:'/search', method: :get, local: true do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :area_kbn, 'エリア' %>
      <%= f.select :area_kbn, ApplicationHelper::AREA_KBN, {include_blank: '選択してください'}, class: 'form-control' %>
      <%= f.submit 'マッチング', class: 'btn btn-primary btn-lg matching-btn', style: 'font-size:18px' %>
    <% end %>
  </div>
</div>

<!-- テーブル -->
<div class="alt-table-responsive">
  <table class="table"> 
    <!--<thead>
      <tr>
        <th class="col-xs-3 col-ms-3 col-md-4 col-lg-4">名前</th>
        <th class="col-xs-3 col-ms-3 col-md-4 col-lg-4">メールアドレス</th>
        <%# <th colspan="3"></th> %>
      </tr>
    </thead>-->

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <!-- ペア成立しているユーザーのみ画像表示のif分追加予定 -->
            <% if user.image? %>
              <%= image_tag(user.image.url, size: "100x100") %>
            <% else %>
              <%= image_tag("/images/icon1.jpg", size: "100x100") %>
            <% end %>
            &emsp;<%= link_to user.name, user_page_path(id: user.id), class: 'user_name' %>
          </td>
          <!--<td><%#= user.email %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
</div>