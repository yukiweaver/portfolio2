<% provide(:title, 'トークルーム') %>
<div class="row">
  <h2>ルーム一覧</h2>
  <div class="col-md-10 col-md-offset-1 mypage-edit">
    <div class="wrapper">
      <div class="column talk">
        <div class="info">
          <h2>トーク</h2>
          <table>
            <thead>
              <tr>
                <th>相手からのメッセージ</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <!-- Todo:ペア状態でのみ画像表示（条件入れずに初期画像固定でもあり） -->
                  <% if user.image? %>
                    <%= image_tag(user.image.url, size: "50x50") %>
                  <% else %>
                    <%= image_tag("/images/icon1.jpg", size: "50x50") %>
                  <% end %>
                  &emsp;<%= link_to user.name, '#', class: 'user_name', :data => {:toggle => "modal", :target => "##{user.id}"} %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br>
          <table>
            <thead>
              <tr>
                <th>トーク中</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Bさん</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="column exit">
        <div class="info">
          <h2>退出中</h2>
        </div>
      </div>
    </div>
  </div>
  <!-- モーダル・ダイアログ -->
  <% @users.each do |user| %>
    <div class="modal fade" id="<%= user.id %>" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
            <h4 class="modal-title">タイトル</h4>
          </div>
          <div class="modal-body">
            <!-- Todo:ペア状態でのみ画像表示（条件入れずに初期画像固定でもあり） -->
            <% if user.image? %>
              <%= image_tag(user.image.url, size: "50x50") %>
            <% else %>
              <%= image_tag("/images/icon1.jpg", size: "50x50") %>
            <% end %>
            &emsp;<%= user.name %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">拒否する</button>
            <button type="button" class="btn btn-primary">入室する</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>